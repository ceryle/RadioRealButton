<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadioRealButton">

        <attr name="android:enabled"/>
        <attr name="android:clickable"/>
        <attr name="android:background"/>

        <attr name="android:padding"/>
        <attr name="android:paddingLeft"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingBottom"/>

        <attr name="rrb_drawable" format="reference"/>
        <attr name="rrb_drawablePadding" format="dimension"/>
        <attr name="rrb_drawableTint" format="color"/>
        <attr name="rrb_drawableTintTo" format="color"/>
        <attr name="rrb_drawableWidth" format="dimension"/>
        <attr name="rrb_drawableHeight" format="dimension"/>
        <attr name="rrb_drawableGravity" format="integer">
            <flag name="left" value="0"/>
            <flag name="top" value="1"/>
            <flag name="right" value="2"/>
            <flag name="bottom" value="3"/>
        </attr>

        <attr name="rrb_text" format="string"/>
        <attr name="rrb_textColor" format="color"/>
        <attr name="rrb_textColorTo" format="color"/>
        <attr name="rrb_textSize" format="dimension"/>
        <attr name="rrb_textTypeface" format="integer">
            <flag name="monospace" value="0"/>
            <flag name="normal" value="1"/>
            <flag name="sans" value="2"/>
            <flag name="serif" value="3"/>
        </attr>
        <attr name="rrb_textTypefacePath" format="string"/>
        <attr name="rrb_textFillSpace" format="boolean"/>
        <attr name="rrb_textStyle" format="integer">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="rrb_textGravity" format="integer">
            <flag name="left" value="0"/>
            <flag name="center" value="1"/>
            <flag name="right" value="2"/>
        </attr>

        <attr name="rrb_checked" format="boolean"/>
        <attr name="rrb_backgroundColor" format="color"/>
        <attr name="rrb_ripple" format="boolean"/>
        <attr name="rrb_rippleColor" format="color"/>


        <attr name="rrb_selectorColor" format="color"/>

    </declare-styleable>

